<div class="container mt-4">
  <h1 class="border-bottom pb-3"><%= @article.title %>
    <%= link_to edit_article_path do %>
      <i class="far fa-edit ms-3"></i>
    <% end %>
    <%= link_to article_path(@article), method: :delete, data: { confirm: 'Are you sure?'} do %>
      <i class="far fa-trash-alt ms-3"></i>
    <% end %>
  </h1>
  <p class="mt-4"><%= @article.content %></p>
</div>
